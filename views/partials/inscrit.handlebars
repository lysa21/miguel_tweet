<div class="container p-4">
    <div class="row">
        <h3 class="card-title text-uppercase">Tweets</h3>
        {{#each tweets}}
            <div class="col-md-10">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>Tweet: {{text}}</h3>
                        <a href="/effacer/{{id_tweet}}" class="btn btn-danger">Effacer</a>
                        <a href="/editer/{{id_tweet}}" class="btn btn-secondary">Éditer</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <!--valido cuando no hay usuario registrado-->
                    <p>Aucun tweet enregistré</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>